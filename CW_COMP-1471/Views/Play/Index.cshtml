@model IEnumerable<Play>

@{
    ViewData["Title"] = "Play List";
}

<h2>Play List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Description</th>
            <th>Date and Time</th>
            <th>Play Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var play in Model)
        {
            <tr>
                <td>@play.Title</td>
                <td>@play.Genre</td>
                <td>@play.Description</td>
                <td>@play.Dateandtime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@play.PlayType</td>
                <td>
                    <a asp-action="EditPlay" asp-route-id="@play.PlayId" class="icon-btn text-warning m-1">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@play.PlayId" class="icon-btn text-danger m-1" onclick="return confirm('Are you sure you want to delete this play?');">
                        <i class="fas fa-trash"></i>
                    </a>                    
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreatePlay" class="btn btn-success">Create new play</a>
