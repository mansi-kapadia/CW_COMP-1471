@model Play

@{
    ViewBag.Title = "Update Play";
}

@using (Html.BeginForm("Edit", "Play", FormMethod.Post))
{
    <div class="container create-edit-form">
        <h2 class="mb-4">Update Play</h2>

        @Html.HiddenFor(m => m.PlayId) <!-- Ensure Play ID is included for updates -->

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Title</label>
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Enter Play Title", required = "required" })
                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Genre</label>
                    @Html.TextBoxFor(m => m.Genre, new { @class = "form-control", placeholder = "Enter Genre", required = "required" })
                    @Html.ValidationMessageFor(m => m.Genre, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Description</label>
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Enter Description", rows = 3, required = "required" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Date and Time</label>
                     <input type="datetime-local" class="form-control" name="Dateandtime"
                        value="@Model.Dateandtime.ToString("yyyy-MM-ddTHH:mm")" required="required" />
                    @Html.ValidationMessageFor(m => m.Dateandtime, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Play Type</label>
                    @Html.TextBoxFor(m => m.PlayType, new { @class = "form-control", placeholder = "Enter Play Type", required = "required" })
                    @Html.ValidationMessageFor(m => m.PlayType, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Image URL</label>
                    @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", placeholder = "Enter Image URL", required = "required" })
                    @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-success me-2">Update Play</button>
                <a href="@Url.Action("Index", "Play")" class="btn btn-outline-success">Back to List</a>
            </div>
        </div>
    </div>

    @if (ViewBag.Errors != null)
    {
        <div class="alert alert-danger mt-3">
            <ul>
                @foreach (var error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
}
