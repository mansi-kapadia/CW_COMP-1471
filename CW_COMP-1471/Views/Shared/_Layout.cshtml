<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CW_COMP_1471</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CW_COMP_1471.styles.css" asp-append-version="true" />
</head>
<body>   
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">CW_COMP_1471</a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarContent">
                    
                    @if (Context.Request.Cookies["UserSession"] != null)
                    {
                        <ul class="navbar-nav me-auto">                            
                            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index">Users</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Play" asp-action="Index">Plays</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Pricing" asp-action="Index">Pricings</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Role" asp-action="Index">Roles</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Discount" asp-action="Index">Discounts</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Package" asp-action="Index">Packages</a></li>
                        </ul>

                        <!-- Cart Button -->
                        <a class="btn btn-outline-primary position-relative me-3" id="cartButton">
                            🛒 Cart 
                            <span id="cartCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                0
                            </span>
                        </a>
                    }
                
                    <!-- Authentication Buttons -->
                    <div class="d-flex">
                        @if (Context.Request.Cookies["UserSession"] != null) // User is logged in
                        {
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <button type="submit" class="btn btn-outline-danger">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-success me-2" asp-controller="Account" asp-action="Register">Register</a>
                            <a class="btn btn-outline-dark" asp-controller="Account" asp-action="Login">Login</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p>&copy; 2025 - University of Greenwich</p>
            <p>Created for the "Enterprise Software Engineering Development" module by:</p>
            <ul>
                <li>Tugrul Subekci - 001421550</li>
                <li>Hasan Yasin Yildiz - 001418766</li>
                <li>Gopala Krishna Kumbha - 001416850</li>
                <li>Mansi Kapadia - 001432430</li>
                <li>Shanmukha Sai Kalluri - 001437795</li>
            </ul>
            <p><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        let cartItems = [];

        function updateCartCount() {
            let totalCount = cartItems.reduce((sum, item) => sum + item.quantity, 0);
            document.getElementById("cartCount").innerText = totalCount;
        }

        function addToCart(PlayId, inputId) {
            let quantity = parseInt(document.getElementById(inputId).value) || 1;
        
            let existingItem = cartItems.find(item => item.playId === PlayId);
            if (existingItem) {
                existingItem.quantity += quantity;
            } else {
                cartItems.push({ playId: PlayId, quantity });
            }

            updateCartCount();
            alert(`Added to Cart! Current Items: ${cartItems.length}`);
        }

        document.addEventListener("DOMContentLoaded", function () {
            // Fetch cart count
            fetch('/api/bookings/getcartcount', { 
                method: 'GET',
                headers: { 'Content-Type': 'application/json' },
                credentials: 'include'
            })
            .then(response => response.json())
            .then(data => {
                console.log("cartCount" , data);

                let cartCountElement = document.getElementById("cartCount");

                console.log(cartCountElement);
                cartCountElement.textContent = data || 0;
                if (data.count === 0) {
                    cartCountElement.style.display = 'none';
                }
            })
            .catch(error => console.error('Error fetching cart count:', error));

            // Redirect to Cart Index when the button is clicked
            document.getElementById("cartButton").addEventListener("click", function (event) {
                event.preventDefault();
        
                window.location.href = "api/Cart/"; // Redirect to Cart Index
            });
        });

    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
