@model Role

@{
    ViewBag.Title = "Update Role";
}

@using (Html.BeginForm("Edit", "Role", FormMethod.Post))
{
    <div class="container create-edit-form">
        <h2 class="mb-4">Update Role</h2>

        @Html.HiddenFor(m => m.Id) <!-- Ensures Role ID is retained for updates -->

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Role Name</label>
                    @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control", placeholder = "Enter Role Name", required = "required" })
                    @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-6 d-flex align-items-center">
                <label class="">Active</label>
                <div class="form-check">
                    @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
                    <label class="form-check-label ms-1">Yes</label>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-success me-2">Update Role</button>
                <a href="@Url.Action("Index", "Role")" class="btn btn-outline-success">Back to List</a>
            </div>
        </div>
    </div>

    @if (ViewBag.Errors != null)
    {
        <div class="alert alert-danger mt-3">
            <ul>
                @foreach (var error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
}
