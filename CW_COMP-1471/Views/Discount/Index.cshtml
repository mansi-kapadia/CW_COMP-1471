@model IEnumerable<Discount>

@{
    ViewData["Title"] = "Discount List";
}

<h2>Discount List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Expiry Date</th>
            <th>Package</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var discount in Model)
        {
            <tr>
                <td>@discount.Code</td>
                <td>@discount.Description</td>
                <td>@discount.DiscountAmount</td>
                <td>@discount.ExpiryDate.ToString("yyyy-MM-dd")</td>
                <td>@discount.Package?.Name</td>
                <td>
                    <a asp-action="EditDiscount" asp-route-id="@discount.DiscountId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@discount.DiscountId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateDiscount" class="btn btn-success">Create New Discount</a>
