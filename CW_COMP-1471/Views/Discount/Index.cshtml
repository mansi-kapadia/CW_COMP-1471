@model IEnumerable<Discount>

@{
    ViewData["Title"] = "Discount List";
}

<h2>Discount List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Description</th>
            <th>Amount</th>
            <th>For Kids</th>
            <th>For Pensioners</th>
            <th>Expiry Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var discount in Model)
        {
            <tr>
                <td>@discount.Code</td>
                <td>@discount.Description</td>
                <td>@discount.DiscountAmount</td>
                <td>
                    @if (discount.IsForKids == true)
                    {
                        <i class="fas fa-check-square text-success"></i> 
                    }
                    else
                    {
                        <i class="far fa-square text-danger"></i> 
                    }
                </td>
                <td>
                    @if (discount.IsForPensioners == true)
                    {
                        <i class="fas fa-check-square text-success"></i>
                    }
                    else
                    {
                        <i class="far fa-square text-danger"></i> 
                    }
                </td>
                <td>@discount.ExpiryDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="EditDiscount" asp-route-id="@discount.DiscountId" class="icon-btn text-success m-1">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@discount.DiscountId" class="icon-btn text-danger m-1" 
                       onclick="return confirm('Are you sure you want to delete this discount?');">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateDiscount" class="btn btn-success">Create new discount</a>
