@model CW_COMP_1471.Models.Package

@{
    ViewData["Title"] = "Create Package";
}

@using (Html.BeginForm("Create", "Package", FormMethod.Post))
{
    <div class="container create-edit-form">
        <h2 class="mb-4">Create Package</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter Package Name", required = "required" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Minimum Ticket Quantity</label>
                    @Html.TextBoxFor(m => m.MinTicketQty, new { @class = "form-control", type = "number", placeholder = "Enter Minimum Ticket Quantity", required = "required", min = "1" })
                    @Html.ValidationMessageFor(m => m.MinTicketQty, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label>Free Ticket Count</label>
                    @Html.TextBoxFor(m => m.FreeTicketCount, new { @class = "form-control", type = "number", placeholder = "Enter Free Ticket Count", required = "required", min = "0" })
                    @Html.ValidationMessageFor(m => m.FreeTicketCount, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Description</label>
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Enter Package Description", rows = 3 })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-success me-2">Save Package</button>
                <a href="@Url.Action("Index", "Package")" class="btn btn-outline-success">Back to List</a>
            </div>
        </div>
    </div>

    @if (ViewBag.Errors != null)
    {
        <div class="alert alert-danger mt-3">
            <ul>
                @foreach (var error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
}
